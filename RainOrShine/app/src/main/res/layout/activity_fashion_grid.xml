<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fashion_grid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.veronica.rainorshine.FashionGrid">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:id="@+id/weatherBanner"
        android:src="@drawable/rain"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitStart"
            android:src="@drawable/rain_icon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="24dp"
            android:text=" | 5°"/>
    </LinearLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@id/weatherBanner"
        android:layout_marginTop="80dp"
        android:padding="20dp"
        android:textSize="24dp"
        android:textColor="@color/colorAccent"
        android:maxLines="10"
        android:id="@+id/helloTextView"
        android:text="Hello,\nVeronica."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/helloTextView"
        android:textColor="@color/colorAccent"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:textSize="16dp"
        android:text="Your fashion grid currently displays outfits suitable for 5°C, Rain."/>
</RelativeLayout>
