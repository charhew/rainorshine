<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:id="@+id/activity_fashion_grid">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:id="@+id/weatherBanner"
        android:src="@drawable/rain"
        android:adjustViewBounds="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:id="@+id/icon"
            android:src="@drawable/rain_icon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tempTextView"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="24dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@id/weatherBanner"
        android:layout_marginTop="80dp"
        android:padding="20dp"
        android:textSize="24dp"
        android:textColor="@color/colorAccent"
        android:maxLines="10"
        android:id="@+id/helloTextView"
        android:text="Hello,\nVeronica."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/helloTextView"
        android:textColor="@color/colorAccent"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:textSize="16dp"
        android:id="@+id/displayTextView"
        android:text="Your fashion grid currently displays outfits suitable for 5Â°C, Rain."/>

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridview"
        android:layout_below="@+id/weatherBanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="1dp"
        android:horizontalSpacing="1dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        />
</RelativeLayout>
